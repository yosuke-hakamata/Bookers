
<div class="container">
	<div class="row">
		<div class="col-lg-3 col-xs-3">
			<div>
				<%= render 'users/info' %>
			</div>
			<div>
				<%= render file: "app/views/books/_post.html.erb" %>
			</div>
		</div>
		<div class="col-lg-9 col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Option</th>
					</tr>
				</thead>
				<% @books.each do |book| %>
					<tr class="contents">
						<th>
							<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
						</th>
						<th><%= link_to book_path(book) do %><%= book.title %><% end %></th>
						<th><%= book.body %></th>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

