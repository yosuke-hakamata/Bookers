<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div>
				<%= render file: "app/views/users/_info.html.erb" %>
			</div>
			<div>
				<%= render 'books/post' %>
			</div>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			  <table class="table table-hover table-inverse">
			  	<thead>
				    <tr>
				    	<th></th>
				    	<th>Title</th>
				    	<th>Option</th>
				    </tr>
				</thead>
			    <% @books.each do |book| %>
					<tr class="contents">
						<th>
							<%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %>
						</th>
						<th><%= link_to book_path(book.id) do %><%= book.title %><% end %></th>
						<th><%= book.body %></th>
					</tr>
				<% end %>
			  </table>
		</div>
	</div>
</div>