<h2>Books</h2>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <!-- Table -->
  <table class="table">
    <tr>
    	<th></th>
    	<th>Title</th>
    	<th>Option</th>
    </tr>
    <% @books.each do |book| %>
		<tr class="contents">
			<th>
				<%= link_to user_path(book.user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><% end %>
			</th>
			<th><%= link_to book_path(book.id) do %><%= book.title %><% end %></th>
			<th><%= book.body %></th>
		</tr>
	<% end %>
  </table>
</div>