<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
      <div class="nav-container container-fluid">
        <nav class="navbar-header">
          <span class="nav navbar-nav navbar-brand navbar-left" style="color: white;">Bookers</span>
        </nav>
        <nav class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right" style="float: right;">
              <li class="nav-item">
                <% if user_signed_in? %>
                  <%= link_to "Home", user_path(current_user.id),  class:"glyphicon glyphicon-home nav-link active" %>
                <% else %>
                  <%= link_to "Home", root_path,  class:"glyphicon glyphicon-home nav-link active" %>
                <% end %>
              </li>
              <li class="nav-item">
                <% if user_signed_in? %>
                  <%= link_to "Users", users_path, class:"glyphicon glyphicon-user nav-link" %>
                <% else %>
                  <%= link_to "About", home_about_path, class:"glyphicon glyphicon-user nav-link" %>
                <% end %>
              </li>
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'Books', books_path, class:"glyphicon glyphicon-book nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out nav-link" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "sign up", new_user_registration_path, class:"glyphicon glyphicon-check nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "login", new_user_session_path, class:"glyphicon glyphicon-log-in nav-link" %>
                </li>
              <% end %>
            </ul>
        </nav>
      </div>
    </header>


    <% flash.each do |message_type, message| %>
      <%= message %>
    <% end %>

    <%= yield %>
    <footer style="width: 60%;margin: 0 auto;">
      <p style="float: right;">CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
